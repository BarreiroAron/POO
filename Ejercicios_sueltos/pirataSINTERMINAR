#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int fila, columna;
    char T; //el tesoro del lugar
    char P; //el pirata pata palo
    puts("Ingrese fila:");
    scanf("%d", &fila);
    puts("Ingrese columna:");
    scanf("%d", &columna);

    //viendo si las dimensiones son positivas
    if (fila <= 0 || columna <= 0) {
        printf("Las dimensiones deben ser positivas.\n");
        return 1;
    }

    int a[fila][columna];
    srand(time(NULL));

    // iniciar la matriz
    for (int i = 0; i < fila; i++) {
        for (int j = 0; j < columna; j++) {
            // asignar "1" a los bordes de la matriz
            if (i == 0 || i == fila - 1 || j == 0 || j == columna - 1) {
                a[i][j] = 1;
            } else {
                a[i][j] = 0;  // asignar '0' al interior de la matriz
            }
        }
    }

    // imprimir la matriz
    for (int i = 0; i < fila; i++) {
        for (int j = 0; j < columna; j++) {
            printf("%d ", a[i][j]);
        }
        printf("\n");
    }

    return 0;
}
